    <script>
        // DOM Elements
        const loginPage = document.getElementById('loginPage');
        const appContainer = document.getElementById('appContainer');
        const loginForm = document.getElementById('loginForm');
        const roleOptions = document.querySelectorAll('.role-option');
        const forgotPassword = document.getElementById('forgotPassword');
        const sidebar = document.getElementById('sidebar');
        const mobileToggle = document.getElementById('mobileToggle');
        const menuItems = document.querySelectorAll('.menu-item');
        const contentArea = document.getElementById('contentArea');
        const pageContents = document.querySelectorAll('.page-content');
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const homeCrumb = document.getElementById('homeCrumb');
        const pageCrumb = document.getElementById('pageCrumb');
        const timeDisplay = document.getElementById('timeDisplay');
        const currentTime = document.getElementById('currentTime');
        const loginTimeDisplay = document.getElementById('loginTimeDisplay');
        const loggedInUserName = document.getElementById('loggedInUserName');
        const loggedInUserRole = document.getElementById('loggedInUserRole');
        const userAvatar = document.getElementById('userAvatar');
        const dashboardUserName = document.getElementById('dashboardUserName');
        const onlineUsersList = document.getElementById('onlineUsersList');
        const onlineUsersCount = document.getElementById('onlineUsersCount');
        const onlineCount = document.getElementById('onlineCount');
        const activeUsersBadge = document.getElementById('activeUsersBadge');
        
        // Logout Elements
        const sidebarLogoutBtn = document.getElementById('sidebarLogoutBtn');
        const headerLogoutBtn = document.getElementById('headerLogoutBtn');
        const logoutModal = document.getElementById('logoutModal');
        const closeLogoutModal = document.getElementById('closeLogoutModal');
        const confirmLogoutBtn = document.getElementById('confirmLogoutBtn');
        const cancelLogoutBtn = document.getElementById('cancelLogoutBtn');
        
        // Application State
        let userRole = 'staff';
        let userName = '';
        let userEmail = '';
        let loginTime = null;
        let isDarkMode = false;
        let clockInterval = null;
        let notificationInterval = null;
        
        // Online Users Data
        const onlineUsers = [
            { id: 1, name: "Amyya U. Wu", role: "Admin", status: "online", initials: "AU", color: "#1E7F4B" },
            { id: 2, name: "John Smith", role: "Manager", status: "online", initials: "JS", color: "#3498db" },
            { id: 3, name: "Maria Garcia", role: "Staff", status: "online", initials: "MG", color: "#9b59b6" },
            { id: 4, name: "David Chen", role: "Staff", status: "away", initials: "DC", color: "#e74c3c" },
            { id: 5, name: "Lisa Park", role: "Manager", status: "online", initials: "LP", color: "#f1c40f" }
        ];
        
        // Initialize the application
        function initApp() {
            // Check for saved theme preference
            const savedTheme = localStorage.getItem('kengrow-theme');
            if (savedTheme === 'dark') {
                enableDarkMode();
            } else {
                enableLightMode();
            }
            
            // Check screen width for logout button visibility
            checkScreenWidth();
            window.addEventListener('resize', checkScreenWidth);
            
            // Login form submission
            loginForm.addEventListener('submit', function(e) {
                e.preventDefault();
                const email = document.getElementById('email').value;
                const password = document.getElementById('password').value;
                
                // Simple validation
                if (email && password) {
                    // Store user info
                    userEmail = email;
                    userName = extractUserName(email);
                    
                    // Record login time
                    loginTime = new Date();
                    
                    // In a real app, you would send this to a server
                    console.log(`Logging in with email: ${email}, role: ${userRole}, name: ${userName}`);
                    
                    // Show the main application
                    loginPage.classList.add('hidden');
                    appContainer.classList.remove('hidden');
                    
                    // Set the user role for UI customization
                    updateUIForRole();
                    
                    // Update user display
                    updateUserDisplay();
                    
                    // Initialize online users display
                    displayOnlineUsers();
                    
                    // Start the clock
                    updateClock();
                    clockInterval = setInterval(updateClock, 1000);
                    
                    // Simulate user joining online list
                    addUserToOnlineList();
                    
                    // Start notification simulation
                    startNotificationSimulation();
                } else {
                    alert('Please enter both email and password.');
                }
            });
            
            // Role selection
            roleOptions.forEach(option => {
                option.addEventListener('click', function() {
                    roleOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    userRole = this.getAttribute('data-role');
                });
            });
            
            // Forgot password
            forgotPassword.addEventListener('click', function(e) {
                e.preventDefault();
                alert('Password reset link would be sent to your email in a real application.');
            });
            
            // Mobile sidebar toggle
            mobileToggle.addEventListener('click', function() {
                sidebar.classList.toggle('open');
            });
            
            // Menu navigation
            menuItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Update active menu item
                    menuItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Get the page to show
                    const page = this.getAttribute('data-page');
                    
                    // Show the corresponding page
                    showPage(page);
                    
                    // Update breadcrumb
                    updateBreadcrumb(page);
                    
                    // Close mobile sidebar if open
                    if (window.innerWidth <= 992) {
                        sidebar.classList.remove('open');
                    }
                });
            });
            
            // Theme toggle
            themeToggle.addEventListener('click', toggleTheme);
            
            // Logout buttons
            sidebarLogoutBtn.addEventListener('click', showLogoutModal);
            headerLogoutBtn.addEventListener('click', showLogoutModal);
            
            // Logout modal
            closeLogoutModal.addEventListener('click', hideLogoutModal);
            cancelLogoutBtn.addEventListener('click', hideLogoutModal);
            confirmLogoutBtn.addEventListener('click', performLogout);
            
            // Close modal when clicking outside
            logoutModal.addEventListener('click', function(e) {
                if (e.target === logoutModal) {
                    hideLogoutModal();
                }
            });
            
            // Set default role selection
            document.querySelector('.role-option[data-role="staff"]').classList.add('selected');
            
            // Simulate user status changes (for demo purposes)
            simulateUserStatusChanges();
        }
        
        // Check screen width for responsive logout button
        function checkScreenWidth() {
            if (window.innerWidth <= 768) {
                headerLogoutBtn.style.display = 'flex';
                sidebarLogoutBtn.style.display = 'none';
            } else {
                headerLogoutBtn.style.display = 'none';
                sidebarLogoutBtn.style.display = 'block';
            }
        }
        
        // Theme Functions
        function toggleTheme() {
            if (isDarkMode) {
                enableLightMode();
            } else {
                enableDarkMode();
            }
        }
        
        function enableDarkMode() {
            document.body.classList.add('dark-mode');
            themeIcon.classList.remove('fa-moon');
            themeIcon.classList.add('fa-sun');
            isDarkMode = true;
            localStorage.setItem('kengrow-theme', 'dark');
        }
        
        function enableLightMode() {
            document.body.classList.remove('dark-mode');
            themeIcon.classList.remove('fa-sun');
            themeIcon.classList.add('fa-moon');
            isDarkMode = false;
            localStorage.setItem('kengrow-theme', 'light');
        }
        
        // Logout Functions
        function showLogoutModal() {
            logoutModal.classList.add('show');
        }
        
        function hideLogoutModal() {
            logoutModal.classList.remove('show');
        }
        
        function performLogout() {
            // Hide logout modal
            hideLogoutModal();
            
            // Stop intervals
            if (clockInterval) {
                clearInterval(clockInterval);
                clockInterval = null;
            }
            
            if (notificationInterval) {
                clearInterval(notificationInterval);
                notificationInterval = null;
            }
            
            // Remove user from online list
            removeUserFromOnlineList();
            
            // Reset form
            loginForm.reset();
            roleOptions.forEach(opt => opt.classList.remove('selected'));
            document.querySelector('.role-option[data-role="staff"]').classList.add('selected');
            
            // Reset application state
            userRole = 'staff';
            userName = '';
            userEmail = '';
            loginTime = null;
            
            // Hide app, show login page
            appContainer.classList.add('hidden');
            loginPage.classList.remove('hidden');
            
            // Show logout success message
            alert('You have been successfully logged out.');
        }
        
        // Other existing functions...
        function extractUserName(email) {
            let namePart = email.split('@')[0];
            namePart = namePart.replace(/[._]/g, ' ');
            namePart = namePart.split(' ')
                .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                .join(' ');
            return namePart || 'User';
        }
        
        function updateClock() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit',
                second: '2-digit',
                hour12: true 
            });
            const dateString = now.toLocaleDateString('en-US', {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
            timeDisplay.textContent = `${dateString}  ${timeString}`;
        }
        
        function updateUserDisplay() {
            loggedInUserName.textContent = userName;
            dashboardUserName.textContent = userName.split(' ')[0];
            
            let roleDisplay = '';
            switch(userRole) {
                case 'admin': roleDisplay = 'Administrator'; break;
                case 'manager': roleDisplay = 'Manager'; break;
                case 'staff': roleDisplay = 'Staff Member'; break;
                default: roleDisplay = 'User';
            }
            loggedInUserRole.textContent = roleDisplay;
            
            const initials = getInitials(userName);
            userAvatar.textContent = initials;
            userAvatar.style.backgroundColor = getColorFromName(userName);
            
            if (loginTime) {
                const loginTimeString = loginTime.toLocaleTimeString('en-US', { 
                    hour: '2-digit', 
                    minute: '2-digit',
                    hour12: true 
                });
                const loginDateString = loginTime.toLocaleDateString('en-US', {
                    weekday: 'long',
                    month: 'short',
                    day: 'numeric'
                });
                loginTimeDisplay.textContent = `Logged in: ${loginDateString}, ${loginTimeString}`;
            }
        }
        
        function getInitials(name) {
            return name.split(' ')
                .map(part => part.charAt(0))
                .join('')
                .toUpperCase()
                .substring(0, 2);
        }
        
        function getColorFromName(name) {
            const colors = ['#1E7F4B', '#3498db', '#9b59b6', '#e74c3c', '#f1c40f', '#1abc9c', '#d35400', '#2c3e50'];
            let hash = 0;
            for (let i = 0; i < name.length; i++) {
                hash = name.charCodeAt(i) + ((hash << 5) - hash);
            }
            const index = Math.abs(hash) % colors.length;
            return colors[index];
        }
        
        function displayOnlineUsers() {
            onlineUsersList.innerHTML = '';
            const activeUsers = onlineUsers.filter(user => user.status !== 'offline');
            const onlineCountValue = activeUsers.filter(user => user.status === 'online').length;
            
            onlineUsersCount.textContent = activeUsers.length;
            onlineCount.textContent = onlineCountValue;
            activeUsersBadge.innerHTML = `<i class="fas fa-user-friends"></i> ${onlineCountValue} online`;
            
            activeUsers.forEach(user => {
                const userItem = document.createElement('div');
                userItem.className = 'user-item';
                let statusClass = user.status === 'online' ? 'status-online' : 'status-away';
                
                userItem.innerHTML = `
                    <div class="user-item-avatar" style="background-color: ${user.color}">
                        ${user.initials}
                        <div class="user-item-status ${statusClass}"></div>
                    </div>
                    <div class="user-item-info">
                        <h4>${user.name}</h4>
                        <p>${user.status === 'online' ? 'Active now' : 'Away'}</p>
                    </div>
                    <div class="user-item-role">${user.role}</div>
                `;
                onlineUsersList.appendChild(userItem);
            });
        }
        
        function addUserToOnlineList() {
            const existingUserIndex = onlineUsers.findIndex(user => 
                user.name.toLowerCase() === userName.toLowerCase()
            );
            
            if (existingUserIndex === -1) {
                const userInitials = getInitials(userName);
                const userColor = getColorFromName(userName);
                onlineUsers.unshift({
                    id: onlineUsers.length + 1,
                    name: userName,
                    role: userRole === 'admin' ? 'Admin' : userRole === 'manager' ? 'Manager' : 'Staff',
                    status: 'online',
                    initials: userInitials,
                    color: userColor
                });
                displayOnlineUsers();
            } else {
                onlineUsers[existingUserIndex].status = 'online';
                displayOnlineUsers();
            }
        }
        
        function removeUserFromOnlineList() {
            const userIndex = onlineUsers.findIndex(user => 
                user.name.toLowerCase() === userName.toLowerCase()
            );
            
            if (userIndex !== -1) {
                onlineUsers[userIndex].status = 'offline';
            }
        }
        
        function simulateUserStatusChanges() {
            setInterval(() => {
                const randomIndex = Math.floor(Math.random() * onlineUsers.length);
                const randomUser = onlineUsers[randomIndex];
                if (randomUser.name !== userName) {
                    randomUser.status = randomUser.status === 'online' ? 'away' : 'online';
                    displayOnlineUsers();
                }
            }, 30000);
        }
        
        // Simulate receiving new notifications
        function startNotificationSimulation() {
            // Clear any existing interval
            if (notificationInterval) {
                clearInterval(notificationInterval);
            }
            
            // Add a new notification every 30-60 seconds
            notificationInterval = setInterval(() => {
                // Show a toast notification
                showToastNotification();
            }, Math.random() * 30000 + 30000); // Between 30-60 seconds
        }
        
        function showToastNotification() {
            const notifications = [
                {
                    title: 'New Document Uploaded',
                    message: `Document "${getRandomFileName()}" has been uploaded`,
                    icon: 'fas fa-upload'
                },
                {
                    title: 'Approval Required',
                    message: 'A new document requires your review and approval',
                    icon: 'fas fa-check-circle'
                },
                {
                    title: 'System Update',
                    message: 'Weekly maintenance completed successfully',
                    icon: 'fas fa-cog'
                },
                {
                    title: 'New Comment',
                    message: `${getRandomUserName()} commented on a document`,
                    icon: 'fas fa-comment'
                }
            ];
            
            const randomNotification = notifications[Math.floor(Math.random() * notifications.length)];
            const toast = document.getElementById('notificationToast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');
            
            toastTitle.textContent = randomNotification.title;
            toastMessage.textContent = randomNotification.message;
            toastIcon.className = randomNotification.icon;
            
            // Show toast
            toast.classList.add('show');
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                toast.classList.remove('show');
            }, 5000);
            
            // Close button
            document.getElementById('toastClose').addEventListener('click', function() {
                toast.classList.remove('show');
            });
        }
        
        function getRandomFileName() {
            const fileNames = [
                'Q3 Financial Report.pdf',
                'Marketing Plan Q4.docx',
                'Employee Survey Results.xlsx',
                'Project Timeline.pptx',
                'Client Presentation.pdf'
            ];
            return fileNames[Math.floor(Math.random() * fileNames.length)];
        }
        
        function getRandomUserName() {
            const names = ['John Smith', 'Maria Garcia', 'David Chen', 'Lisa Park', 'Robert Johnson'];
            return names[Math.floor(Math.random() * names.length)];
        }
        
        function showPage(page) {
            // Hide all pages
            pageContents.forEach(content => content.classList.add('hidden'));
            
            // Show the requested page
            const pageElement = document.getElementById(`${page}Page`);
            if (pageElement) {
                pageElement.classList.remove('hidden');
            } else {
                // Default to dashboard if page doesn't exist
                document.getElementById('dashboardPage').classList.remove('hidden');
            }
            
            // Check if user has permission to access admin pages
            if (page === 'users' && userRole !== 'admin') {
                alert('You do not have permission to access the Users page.');
                showPage('dashboard');
                return;
            }
        }
        
        function updateBreadcrumb(page) {
            const pageNames = {
                dashboard: 'Dashboard',
                documents: 'Documents',
                folders: 'Folders',
                upload: 'Upload',
                search: 'Search',
                workflows: 'Workflows',
                archive: 'Archive',
                reports: 'Reports',
                users: 'User Management',
                settings: 'Settings'
            };
            pageCrumb.textContent = pageNames[page] || 'Dashboard';
        }
        
        function updateUIForRole() {
            const adminElements = document.querySelectorAll('.admin-only');
            if (userRole === 'admin') {
                adminElements.forEach(el => {
                    if (el.classList.contains('menu-item')) {
                        el.style.display = 'flex';
                    } else {
                        el.style.display = 'block';
                    }
                });
            } else {
                adminElements.forEach(el => {
                    el.style.display = 'none';
                });
            }
        }
        
        // Initialize the app
        document.addEventListener('DOMContentLoaded', initApp);
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            if (window.innerWidth <= 992 && 
                !sidebar.contains(e.target) && 
                !mobileToggle.contains(e.target) &&
                sidebar.classList.contains('open')) {
                sidebar.classList.remove('open');
            }
        });
    </script>
</body>
</html>
